{
    "manifest_version": 2,
    "name": "Pay with life extension",
    "description": "See how much you are paying with your life for the items you buy online",
    "version": "0.2",
    "content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs", 
        "storage",
        "http://*/*", 
        "https://*/*"
    ]
}
